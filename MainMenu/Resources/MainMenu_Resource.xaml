<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Задний фон для Grid-->
    <Style x:Key="Background_Grid" TargetType="Grid">
        <Setter Property="Background" Value="#FFA2DFFF"/>
    </Style>

    <!--Заголовок программы-->
    <Style x:Key="MainHeading_Label" TargetType="Label">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Segoe Print Bold"/>
        <Setter Property="FontSize" Value="26"/>
    </Style>
    <!--Подзаголовок-->
    <Style x:Key="Subtitle_Label" TargetType="Label">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Calibri"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    
    
    
</ResourceDictionary>